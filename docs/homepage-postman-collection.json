{
  "info": {
    "name": "Homepage Elements API",
    "description": "Complete API collection for managing homepage elements including hero images, featured content, Instagram feeds, and more.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get All Homepage Elements",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/elements?page=1&limit=10&type=hero&is_active=true&is_featured=true&search=wedding",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 100)"
                },
                {
                  "key": "type",
                  "value": "hero",
                  "description": "Filter by element type (hero, featured, instagram, about, gallery, testimonial, service, contact)"
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "description": "Filter by active status (true/false)"
                },
                {
                  "key": "is_featured",
                  "value": "true",
                  "description": "Filter by featured status (true/false)"
                },
                {
                  "key": "search",
                  "value": "wedding",
                  "description": "Search in title, subtitle, and description"
                }
              ]
            },
            "description": "Get all homepage elements with filtering and pagination. No authentication required."
          }
        },
        {
          "name": "Get Homepage Element by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/{{elementId}}",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "{{elementId}}"]
            },
            "description": "Get a specific homepage element by ID. No authentication required."
          }
        },
        {
          "name": "Get Elements by Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/type/hero?active_only=true",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "type", "hero"],
              "query": [
                {
                  "key": "active_only",
                  "value": "true",
                  "description": "Only return active elements (default: true)"
                }
              ]
            },
            "description": "Get all elements of a specific type. No authentication required."
          }
        },
        {
          "name": "Get Active Hero Elements",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/hero/active",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "hero", "active"]
            },
            "description": "Get all active hero elements (images and videos) ordered by order_index. No authentication required."
          }
        },
        {
          "name": "Get Active Hero Videos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/hero/videos",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "hero", "videos"]
            },
            "description": "Get all active hero videos with autoplay, muted, and loop settings. No authentication required."
          }
        },
        {
          "name": "Get Featured Images",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/featured/images",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "featured", "images"]
            },
            "description": "Get all featured and active images. No authentication required."
          }
        },
        {
          "name": "Get Instagram Images",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/instagram/images",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "instagram", "images"]
            },
            "description": "Get all active Instagram type elements. No authentication required."
          }
        },
        {
          "name": "Get Homepage Preview",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/preview",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "preview"]
            },
            "description": "Get complete homepage preview with hero, featured, Instagram, and about elements. No authentication required."
          }
        }
      ]
    },
    {
      "name": "Admin Endpoints (Require Authentication)",
      "item": [
        {
          "name": "Create Homepage Element",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "type",
                  "value": "hero",
                  "description": "Element type (hero, hero-video, featured, featured-video, instagram, about, gallery, testimonial, service, contact)",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "Welcome to Manish Photography",
                  "description": "Element title (optional)",
                  "type": "text"
                },
                {
                  "key": "subtitle",
                  "value": "Capturing Life's Beautiful Moments",
                  "description": "Element subtitle (optional)",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Professional photography services for weddings, portraits, and special events",
                  "description": "Element description (optional)",
                  "type": "text"
                },
                {
                  "key": "order_index",
                  "value": "1",
                  "description": "Display order (optional, auto-assigned if not provided)",
                  "type": "text"
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "description": "Active status (optional, default: true)",
                  "type": "text"
                },
                {
                  "key": "is_featured",
                  "value": "true",
                  "description": "Featured status (optional, default: false)",
                  "type": "text"
                },
                {
                  "key": "video_autoplay",
                  "value": "true",
                  "description": "Video autoplay (optional, default: false for images, true for hero-video)",
                  "type": "text"
                },
                {
                  "key": "video_muted",
                  "value": "true",
                  "description": "Video muted (optional, default: true for hero-video)",
                  "type": "text"
                },
                {
                  "key": "video_loop",
                  "value": "true",
                  "description": "Video loop (optional, default: false for images, true for hero-video)",
                  "type": "text"
                },
                {
                  "key": "media_file",
                  "type": "file",
                  "description": "Media file (image or video, optional)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/homepage/elements",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements"]
            },
            "description": "Create a new homepage element. Requires admin authentication."
          }
        },
        {
          "name": "Update Homepage Element",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"subtitle\": \"Updated Subtitle\",\n  \"description\": \"Updated description\",\n  \"order_index\": 2,\n  \"is_active\": true,\n  \"is_featured\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/{{elementId}}",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "{{elementId}}"]
            },
            "description": "Update an existing homepage element. Requires admin authentication."
          }
        },
        {
          "name": "Delete Homepage Element",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/{{elementId}}",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "{{elementId}}"]
            },
            "description": "Delete a homepage element and its associated media. Requires admin authentication."
          }
        },
        {
          "name": "Toggle Element Active Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_active\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/{{elementId}}/toggle-active",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "{{elementId}}", "toggle-active"]
            },
            "description": "Toggle the active status of a homepage element. Requires admin authentication."
          }
        },
        {
          "name": "Reorder Elements",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"element_ids\": [\n    \"uuid-1\",\n    \"uuid-2\",\n    \"uuid-3\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/reorder",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "reorder"]
            },
            "description": "Reorder homepage elements by providing an array of element IDs in the desired order. Requires admin authentication."
          }
        },
        {
          "name": "Update Element Media",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "media_file",
                  "type": "file",
                  "description": "New media file (image or video)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/{{elementId}}/media",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "{{elementId}}", "media"]
            },
            "description": "Update the media file for an existing homepage element. Old media will be deleted from Cloudinary. Requires admin authentication."
          }
        },
        {
          "name": "Get Homepage Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/homepage/stats",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "stats"]
            },
            "description": "Get homepage statistics including total elements, active elements, hero images/videos, and featured images. Requires admin authentication."
          }
        },
        {
          "name": "Bulk Upload Elements",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "type",
                  "value": "featured",
                  "description": "Element type for all uploaded files",
                  "type": "text"
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "description": "Active status for all uploaded elements",
                  "type": "text"
                },
                {
                  "key": "is_featured",
                  "value": "false",
                  "description": "Featured status for all uploaded elements",
                  "type": "text"
                },
                {
                  "key": "files",
                  "type": "file",
                  "description": "Multiple media files (up to 10)"
                },
                {
                  "key": "files",
                  "type": "file",
                  "description": "Multiple media files (up to 10)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/homepage/elements/bulk-upload",
              "host": ["{{baseUrl}}"],
              "path": ["homepage", "elements", "bulk-upload"]
            },
            "description": "Upload multiple files as homepage elements of the same type. Requires admin authentication."
          }
        }
      ]
    }
  ]
} 